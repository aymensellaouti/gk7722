{% extends 'base.html.twig' %}

{% block title %}Hello PersonneController!
{% endblock %}

{% block body %}
	<ol class="list-group">
		{% for personne in personnes %}
			<li class="list-group-item">
				Bonjour
				{{personne.name}}
				vous avez
				{{personne.age}}
				ans</li>
		{% endfor %}
	</ol>

	<div class="alert alert-info">
		{% for stat in stats %}
			<p>Age moyen =
				{{stat.ageMoyen}}</p>
			<p>Nombre de personne =
				{{stat.nbrePersonne}}</p>
		{% endfor %}
	</div>
{% endblock %}
