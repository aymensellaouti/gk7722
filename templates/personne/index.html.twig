{% extends 'base.html.twig' %}

{% block title %}Hello PersonneController!
{% endblock %}

{% block body %}
	<ol class="list-group">
		{% for personne in personnes %}
			<li class="list-group-item">
				Bonjour
				{{personne.name}}
				vous avez
				{{personne.age}}
				ans,

				vos hobbies sont: 
				{% for hobby in personne.hobbies %}
					{{hobby.designation}} 
				{% else %}
					Aucun
				{% endfor %}
				{# path chemin relatif, url pour un chemin absolue #}
				<a href="{{path('edit_personne', {id: personne.id})}}">edit</a>
				<a href="{{path('delete_personne', {id: personne.id})}}">delete</a>
			</li>
		{% endfor %}
	</ol>

	<div class="alert alert-info">
		{% for stat in stats %}
			<p>Age moyen =
				{{stat.ageMoyen}}</p>
			<p>Nombre de personne =
				{{stat.nbrePersonne}}</p>
		{% endfor %}
	</div>
{% endblock %}
